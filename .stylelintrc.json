{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-rational-order"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/properties-order": [],
    "declaration-empty-line-before": null,
    "plugin/rational-order": [true, {
      "empty-line-between-groups": true
    }]
  }
}
